{
    "name": "mammatus/app",
    "type": "composer-plugin",
    "description": "\ud83d\ude82 Main entry point for all MammatusPHP applications",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-pcntl": "^7.4",
        "bramus/monolog-colored-line-formatter": "^3.0",
        "clue/block-react": "^1.3",
        "composer-plugin-api": "^1.1",
        "doctrine/annotations": "^1.4",
        "mammatus/life-cycle-events": "dev-master",
        "monolog/monolog": "^2.0",
        "php-di-definitions/definitions-gatherer": "^1.0",
        "php-di-definitions/react-event-loop": "^1.0",
        "php-di-definitions/react-recoil": "^1.0",
        "php-di/php-di": "^6.0",
        "psr/container": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.1",
        "react/event-loop": "^1.0 || ^0.5",
        "thecodingmachine/safe": "^1.1",
        "wyrihaximus/broadcast": "dev-next-gen",
        "wyrihaximus/constants": "^1.5",
        "wyrihaximus/doctrine-annotation-autoloader": "^1.0",
        "wyrihaximus/get-in-packages-composer.jason": "^1.0",
        "wyrihaximus/monolog-formatted-psr-handler": "^1.0",
        "wyrihaximus/monolog-processors": "^1.1",
        "wyrihaximus/psr-3-context-logger": "^1.0",
        "wyrihaximus/react-psr-3-stdio": "^2.0"
    },
    "require-dev": {
        "mammatus/test-app": "dev-master",
        "monolog/monolog": "^2.0",
        "wyrihaximus/test-utilities": "^2.2"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "extra": {
        "class": "Mammatus\\Composer\\BinPathUpdater",
        "mammatus": {
            "config": [
                "etc/config/*.php"
            ]
        },
        "php-di-definitions": {
            "di": [
                "etc/di/*.php"
            ]
        },
        "wyrihaximus": {
            "broadcast": {
                "has-listeners": true
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Mammatus\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mammatus\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/mammatus"
    ],
    "scripts": {
        "post-install-cmd": [
            "composer normalize"
        ],
        "post-update-cmd": [
            "composer normalize"
        ],
        "pre-autoload-dump": [
            "Mammatus\\Composer\\BinPathUpdater::updateBinPath"
        ]
    }
}
