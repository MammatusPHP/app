{
  "name": "mammatus/app",
  "description": "\ud83d\ude82 Main entry point for all MammatusPHP applications",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "ext-pcntl": "^8.3",
    "composer-runtime-api": "^2.2",
    "bramus/monolog-colored-line-formatter": "^3.0",
    "mammatus/life-cycle-events": "^2.2",
    "monolog/monolog": "^3.5",
    "php-di-definitions/definitions-gatherer": "^1",
    "php-di/php-di": "^7",
    "psr/container": "^1 || ^2",
    "psr/event-dispatcher": "^1",
    "psr/log": "^3",
    "react/async": "^4.3",
    "react/event-loop": "^1.5",
    "react/promise": "^3.2",
    "wyrihaximus/broadcast": "^2.3.1",
    "wyrihaximus/broadcast-contracts": "^1.3",
    "wyrihaximus/constants": "^1.5",
    "wyrihaximus/get-in-packages-composer.jason": "^2.0",
    "wyrihaximus/metrics": "^3",
    "wyrihaximus/metrics-tactician": "^1.2",
    "wyrihaximus/monolog-factory": "^2.0",
    "wyrihaximus/psr-3-context-logger": "^3.0.0",
    "wyrihaximus/psr-3-utilities": "^2.3.0",
    "wyrihaximus/react-psr-3-stdio": "^4.0.0"
  },
  "require-dev": {
    "mammatus/test-app": "dev-master",
    "runroom/rector-prophecy-to-mocking": "^0.1.0",
    "wyrihaximus/makefiles": "^0.7.9",
    "wyrihaximus/test-utilities": "^8.2.0"
  },
  "autoload": {
    "psr-4": {
      "Mammatus\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mammatus\\Tests\\": "tests"
    }
  },
  "bin": [
    "bin/mammatus"
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupol/composer-packages": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "mindplay/composer-locator": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/broadcast": true,
      "wyrihaximus/makefiles": true,
      "wyrihaximus/test-utilities": true
    },
    "platform": {
      "php": "8.4.13"
    },
    "sort-packages": true
  },
  "extra": {
    "mammatus": {
      "config": [
        "etc/config/*.php"
      ]
    },
    "php-di-definitions": {
      "di": [
        "etc/di/*.php"
      ]
    },
    "wyrihaximus": {
      "broadcast": {
        "has-listeners": true
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "make on-install-or-update || true"
    ],
    "post-update-cmd": [
      "make on-install-or-update || true"
    ]
  }
}
