{
    "minimum-stability": "dev",
    "prefer-stable": true,
    "name": "reactive-apps/app",
    "require": {
        "php": "^7.2",
        "bramus/monolog-colored-line-formatter": "^2.0",
        "doctrine/annotations": "^1.4",
        "league/tactician": "^1.0",
        "league/tactician-container": "^2.0",
        "mnapoli/silly": "^1.7",
        "monolog/monolog": "^1.23",
        "php-di-definitions/definitions-gatherer": "dev-master",
        "php-di-definitions/react-event-loop": "dev-master",
        "php-di/php-di": "^6.0",
        "react/event-loop": "^1.0 || ^0.5",
        "reactive-apps/command": "dev-master",
        "reactive-apps/rx-streams": "dev-master",
        "reactivex/rxphp": "^2.0",
        "recoil/react": "^1.0",
        "recoil/recoil": "^1.0",
        "roave/better-reflection": "^2.0",
        "wyrihaximus/doctrine-annotation-autoloader": "^1.0",
        "wyrihaximus/get-in-packages-composer.jason": "^1.0",
        "wyrihaximus/monolog-formatted-psr-handler": "^1.0",
        "wyrihaximus/monolog-processors": "^1.1",
        "wyrihaximus/psr-3-callable-throwable-logger": "^1.0",
        "wyrihaximus/psr-3-context-logger": "^1.0",
        "wyrihaximus/psr-3-filter": "^1.1",
        "wyrihaximus/react-psr-3-loggly": "^2.0",
        "wyrihaximus/react-psr-3-stdio": "^2.0",
        "wyrihaximus/react-stdio-symfony-console": "dev-master",
        "wyrihaximus/tactician-command-handler-mapper": "^1.0",
        "wyrihaximus/tactician-job-command-mapper": "^1.0"
    },
    "require-dev": {
        "api-clients/test-utilities": "^4.3",
        "monolog/monolog": "^1.23"
    },
    "extra": {
        "php-di-definitions": {
            "di": [
                "config/di/app.php",
                "config/di/error-handler.php",
                "config/di/logger.php",
                "config/di/output.php",
                "config/di/recoil.php"
            ]
        },
        "reactive-apps": {
            "command": {
                "ReactiveApps\\Command": "src/Command"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "autoload": {
        "psr-4": {
            "ReactiveApps\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReactiveApps\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "ensure-installed": "composer install --ansi -n -q",
        "cs": [
            "@ensure-installed",
            "php-cs-fixer fix --config=.php_cs --ansi --dry-run --diff --verbose --allow-risky=yes --show-progress=estimating"
        ],
        "cs-fix": [
            "@ensure-installed",
            "php-cs-fixer fix --config=.php_cs --ansi --verbose --allow-risky=yes --show-progress=estimating"
        ],
        "unit": [
            "@ensure-installed",
            "phpunit --colors=always -c phpunit.xml.dist"
        ],
        "unit-coverage": [
            "@ensure-installed",
            "phpunit --colors=always -c phpunit.xml.dist --coverage-text --coverage-html covHtml --coverage-clover ./build/logs/clover.xml"
        ],
        "lint-php": [
            "@ensure-installed",
            "parallel-lint --exclude vendor ."
        ],
        "qa-all": [
            "@lint-php",
            "@cs",
            "@unit"
        ],
        "qa-all-coverage": [
            "@lint-php",
            "@cs",
            "@unit-coverage"
        ],
        "qa-windows": [
            "@lint-php",
            "@cs",
            "@unit"
        ],
        "qa-ci": [
            "@unit"
        ],
        "qa-ci-extended": [
            "@qa-all-coverage"
        ],
        "qa-ci-windows": [
            "@qa-windows"
        ],
        "qa-contrib": [
            "@qa-all"
        ],
        "ci-coverage": [
            "if [ -f ./build/logs/clover.xml ]; then wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover ./build/logs/clover.xml; fi"
        ]
    }
}
