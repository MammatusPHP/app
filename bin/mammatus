#!/usr/bin/php
<?php declare(strict_types=1);

use Mammatus\App;
use Mammatus\Boot;
use Mammatus\Contracts\Argv;

(static function(string $_composer_autoload_path): void {
    /**
     * Require Composer's autoloader
     */
    require_once $_composer_autoload_path;
})($_composer_autoload_path);

(static function(Argv $argv): void {
    /**
     * Create and boot up the application
     */
    exit(Boot::boot(App::class, $argv)->value);
})((static function(array $argv): Argv {
    if (array_key_exists(1, $argv)) {
        return new App\Group($argv[1]);
    }

    throw new RuntimeException('No group specified');
})($argv));
